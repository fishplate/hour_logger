<h1>Approve User Hours</h1>
<h2><%= @user.first_name %> <%= @user.last_name %></h2>
<% if !@user.user_hours.empty? %>
  <% @user.user_hours.each do |hour| %>
    <div class="well">
      <li><b>Name</b> : <%= hour.placement.name %></li>
      <li><b>Area</b> : <%= hour.placement.area %></li>
      <li><b>Hours</b> : <%= hour.hours %></li>
      <!--This needs to use controller to approve hours -->
      <%= link_to "approve", "#", :class => "btn btn-success" %>
    </div>
  <% end %>
<% else %>
  <div class="well">
    <p> No hours to review </p>
  </div>
<% end %>