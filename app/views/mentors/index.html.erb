<div class="container">
 <div class="row">
 <div class="span7 data-block"> 
  <header>
  <h2><span class="icon-group">&nbsp;Approve Users</span></h2>
</header>
<h2>To Review</h2>
<% if !@users.empty? %>
 <table class="table table-hover">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Approve User</th>
    </tr>
  </thead>
    <tbody>
      <% if !@outstanding.empty? %>
      <% @outstanding.each do |user| %>
      <tr>
        <td><%= "#{user.first_name}" %></td>
        <td><%= "#{user.last_name}" %></td>
        <td><%=link_to 'Approve', mentor_path(user), :class => "btn " + hours_status?(user) %></td>
      </tr>
      <% end %>
    <% else %>
      <p class="notice"> No Outstanding User Hours </p>
    <% end %>
    </tbody>
  </table>


  <h2>Reviewed</h2>

  <table class="table table-hover">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Reviewed</th>
    </tr>
  </thead>
    <tbody>
      <% @processed.each do |user| %>
      <tr>
        <td><%= "#{user.first_name}" %></td>
        <td><%= "#{user.last_name}" %></td>
        <td><%=link_to 'Reviewed', mentor_path(user), :class => "btn " + hours_status?(user) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

 <h3> Users With No Hours</h3>
  <table class="table table-hover">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>No Hours</th>
    </tr>
  </thead>
    <tbody>
     <% @no_hours.each do |user| %>
      <tr>
        <td><%= "#{user.first_name}" %></td>
        <td><%= "#{user.last_name}" %></td>
        <td>No Hours</td>
      </tr>
    <% end %>
    <% else %>
 
  <p>No Users To Review</p>
<% end %>


    </tbody>
  </table>
  



 </div><!--/span7-->
</div>
</div><!--/container-->
