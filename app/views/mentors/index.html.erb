<% if !@user_hours.empty? %>
  <% @user_hours.each do |hour| %>
    <div class="well">
      <li><%= hour.placement.name %></li>
      <li><%= hour.placement.area %></li>
      <li><%= hour.hours %></li>
      <!--This needs to use controller to approve hours -->
      <%= link_to "approve", "#", :class => "btn btn-success" %>
    </div>
  <% end %>
<% else %>
  <div class="well">
    <p> No User hours to review </p>
  </div>
<% end %>