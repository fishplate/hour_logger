<div class="container">
 <div class="row">
  <div class="span8 offset2">
 <div id="login-wrapper">
 <%= form_for(resource, :as => resource_name, :html => {class:"form login-form"}, :url => registration_path(resource_name)) do |f| %>
 <%= devise_error_messages! %>
 <legend>Sign Up to <span class="blue">HourLogger</span></legend>
  <div class="inner-login-wrapper">
   <%= f.label :email %>
   <%= f.email_field :email, :autofocus => true %>

   <%= f.label :password %>
   <%= f.password_field :password %>

   <%= f.label :password_confirmation %>
   <%= f.password_field :password_confirmation %>
   <br>
   <%= f.submit "Sign Up", :class => 'btn btn-success' %>
   </div><!--/inner-login-wrapper-->
  <% end %>
 </div><!--/login wrapper -->
</div>
</div>
</div><!--/container -->

